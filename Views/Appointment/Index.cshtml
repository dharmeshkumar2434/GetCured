@model IEnumerable<GetCuredProject.Models.AppointmentModel>

@{
    ViewData["Title"] = "ViewAppointments";
}
<link rel="stylesheet" href="~/css/ImageMove.css" />
<div class="col-10">
    <img src="~/images/p4.png" width="50" height="50" class="d-inline-block align-top rounded-circle" alt="Image..."> <font size="6"> &nbsp <b>Appointments..!!</b></font>
    
</div>
@*<h1>Appointments</h1>*@

@if (ViewBag.NewBooked!= null && ViewBag.NewBooked == true)
{
    <div class="alert alert-success" role="alert">
        This is a success alert—check it out!
    </div>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
 <div class="row">
        @foreach (var item in Model)
        {

        <div class="col-lg-4">
            <div class="card" style="width: 18rem;">
                <div class="img3d">
                <img class="card-img-top" src="/images/appo.jpg" alt="appointment">
                <hr/>
               </div>
               <div class="img3d">
                <div class="card-body">
                    <h4 class="card-title"> Doctor : @item.Doctor.DName</h4>
                    <p class="card-text"><b>Appointment Date :</b>@Html.DisplayFor(modelItem => item.AppoitmentDate)</p>
                    <p class="card-text"><b>Patient Name : </b> @item.Patient.PName</p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
                </div>
            </div>
        </div>
        }
        </div>
