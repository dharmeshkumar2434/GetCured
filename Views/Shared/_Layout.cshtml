@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GetCuredProject</title>
    <link rel="icon" href="/images/logo.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/AboutUs.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" ">
            <div class="container">
                  <a class="navbar-brand" href="#">
    <img src="/images/logo.jpg" width="30" height="30" class="d-inline-block align-top" alt="logo">Getcured </a>
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GetCured</a>*@
               
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                         @if (SignInManager.IsSignedIn(User))
                        {
                            <li action="nav-item">
                                <a class="btn btn-outline-info"  style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Patients" asp-action="Index"> PatientEntry </a>
                            </li>
                              <li action="nav-item">
                                <a class="btn btn-outline-primary"  style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="HospitalOrClinic" asp-action="Index"> HospitalOrClinic </a>
                            </li>
                              <li action="nav-item">
                                <a class="btn btn-outline-info"  style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Doctor" asp-action="Index"> DoctorEntry </a>
                            </li>       
                              <li action="nav-item">
                                <a class="btn btn-outline-primary"  style="margin-top : 10px ; margin-left : 10px; margin-bottom : 5px;" asp-area="" asp-controller="Appointment" asp-action="Index"> Appointment </a>
                            </li>                      
                           @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Patients" asp-action="Index"><button type="button" class="btn btn-outline-info">PatientEntry</button></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HospitalOrClinic" asp-action="Index"><button type="button" class="btn btn-outline-primary">HospitalOrClinic</button></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Doctor" asp-action="Index"><button type="button" class="btn btn-outline-info">DoctorsEntry</button></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Appointment" asp-action="Index"><button type="button" class="btn btn-outline-primary">Appointments</button></a>
                            </li>*@
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GetCured - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
